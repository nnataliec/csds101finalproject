import random
# 1 = rock, 2 = paper, 3 = scissors
def game(player):
    select = [1, 2, 3]
    computer = random.choice(select)

    if player == computer:
        print("It's a draw!")
    elif (player == 1 and computer == 2):
        print("""You chose rock. I chose paper.
        You lost :(""")
    elif (player == 2 and computer == 3):
        print("""You chose paper. I chose scissors
        You lost :(""")
    elif (player == 3 and computer == 1):
        print("""You chose scissors. I chose rock. 
        You lost :(1""")
    else:
        print("You won !!")

while True:
    print("Rock, Paper, or Scissors?")
    x = input("Type 1 for Rock, 2, for Paper, or 3 for Scissors: ")

    player = int(x)
    game(player)

    again = input("Do you want to play again? (y/n)")
    if again == "n":
        print("Thanks for playing!")
        break
